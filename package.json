{
  "name": "aurum-hrms",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest",
    "e2e": "playwright test",
    "seed:visual": "node scripts/seed-visual-fixtures.mjs",
    "visual:preflight": "npm run seed:visual",
    "visual:smoke": "node scripts/visual-smoke.mjs",
    "visual:baseline:update": "node scripts/visual-smoke.mjs --out e2e/visual-baseline",
    "visual:compare": "node scripts/visual-compare.mjs",
    "ci:visual": "npm run visual:smoke && npm run visual:compare",
    "visual:audit:theme": "node scripts/theme-audit.mjs",
    "test:guards:local": "node scripts/guard-suite-local.mjs",
    "audit:roles": "node scripts/deep-role-audit.mjs",
    "audit:pay-data": "node scripts/pay-data-audit.mjs",
    "test:auth-negative": "playwright test e2e/negative-auth.spec.ts",
    "test:compensation-regression": "playwright test e2e/compensation-security.spec.ts",
    "ci:security": "npm run audit:roles && npm run audit:pay-data && npm run test:auth-negative && npm run test:compensation-regression"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.4",
  "dependencies": {
    "@angular/cdk": "^21.1.1",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@auth/core": "^0.37.0",
    "@convex-dev/auth": "^0.0.90",
    "@tailwindcss/postcss": "^4.1.18",
    "convex": "^1.31.4",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.3.0",
    "zone.js": "^0.16.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.2",
    "@angular-devkit/architect": "^0.2101.1",
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.1.1",
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.8",
    "jsdom": "^27.4.0",
    "reflect-metadata": "^0.2.2",
    "typescript": "~5.9.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
